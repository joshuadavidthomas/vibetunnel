# VibeTunnel Production Environment Configuration
# Copy this file to .env and customize for your deployment

# Node environment
NODE_ENV=production

# Server port (default: 4020)
PORT=4020

# Authentication
# Option 1: No authentication (rely on Tailscale network security)
# VIBETUNNEL_NO_AUTH=true

# Option 2: Basic auth (legacy, not recommended with Tailscale)
# VIBETUNNEL_USERNAME=admin
# VIBETUNNEL_PASSWORD=your-secure-password

# Logging
# Verbosity: none, error, warn, info, debug
VIBETUNNEL_VERBOSITY=info

# Enable debug logging (more verbose)
# VIBETUNNEL_DEBUG=true

# Control directory (session data storage)
# VIBETUNNEL_CONTROL_DIR=/home/vibetunnel/.vibetunnel/control

# Push Notifications
PUSH_CONTACT_EMAIL=your-email@example.com

# Git Configuration (for git operations in terminal)
GIT_COMMITTER_NAME=VibeTunnel
GIT_COMMITTER_EMAIL=bot@vibetunnel.local

# Tailscale Serve Integration (if using Tailscale inside container)
# ENABLE_TAILSCALE_SERVE=false

# Security
# ALLOW_LOCAL_BYPASS=false
# LOCAL_AUTH_TOKEN=

# mDNS Advertisement (disable for production)
# NO_MDNS=true
